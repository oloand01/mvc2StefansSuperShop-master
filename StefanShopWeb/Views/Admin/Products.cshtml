@model StefanShopWeb.ViewModels.AdminProductListViewModel

@{
    ViewData["Title"] = "Admin";
}
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Admin</h3>
                    <div class="section-nav">
                        <partial name="_AdminMenu" model="@Model.MenuItems" />
                    </div>
                </div>
            </div>
            <!-- /section title -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->


<div class="section">
    <!-- container -->
    <h3 class="font-italic font-weight-bold mb-4">Lista av produkter</h3>

    <a class="btn btn-secondary btn-sm" asp-action="CreateProduct" asp-controller="Product">Create new</a>


    <div class="container">
        <table class="table table-striped w-auto">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].CategoryName)
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>


                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr class="table-info">
                        <th scope="row">
                            @item.Id
                        </th>
                        <th scope="row">
                            @item.Name
                        </th>
                        <th scope="row">
                            @item.Price
                        </th>
                        <th scope="row">
                            @item.CategoryName
                        </th>
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@item.Id">Update</a> 
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




