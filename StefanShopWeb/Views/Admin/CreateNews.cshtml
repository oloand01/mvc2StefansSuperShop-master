@model StefanShopWeb.ViewModels.AdminNewsletterViewModel

@{
    ViewData["Title"] = "CreateNews";
}

<h2>Create News</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNews">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" disabled class="form-control"  />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status"  class="control-label"></label>
                <input asp-for="Status" disabled class="form-control" value="@Model.Status"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea rows="8" cols="20" asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div class="section-nav">
    <ul class="section-tab-nav tab-nav">
        <li><a asp-action="NewsletterList">Back to List</a></li>
    </ul>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
