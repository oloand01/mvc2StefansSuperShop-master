@model IEnumerable<StefanShopWeb.ViewModels.AdminNewsletterViewModel>

@{
    ViewData["Title"] = "NewsletterList";
}

<h3>Admin</h3>

<br />
<div class="section-nav">
    <ul class="section-tab-nav tab-nav">
        <li><h4><a asp-action="CreateNews"><strong>Create News</strong></a></h4></li>
    </ul>
</div>
<br />
<div>
    <ul>
        @foreach (var item in Model)
        {
         <li>
            <hr />
            <p style="color:darkred">
                Date: <strong>@item.Date  </strong>
                <br />
                Status: <strong>@item.Status</strong>
            </p><br />
            <p>
                <strong>
                    @{var longText = item.Text;
                        var text = longText.Length > 150 ? longText.Substring(0, 150) + "..." : longText;}
                    @text
                </strong>
            </p>
            <div class="section-nav">
                <ul class="section-tab-nav tab-nav">
                    <li>
                        <a asp-action="ViewMessage" asp-route-id="@item.Id">View</a>
                    </li>
                    @if (item.Status != "Done")
                    {
                        <li>
                            <a asp-action="EditNews" asp-route-id="@item.Id">Edit</a>
                        </li>
                        <li>
                            <a asp-action="DeleteNews" asp-route-id="@item.Id">Delete</a>
                        </li>
                        <li>
                            <a asp-action="Message" asp-route-id="@item.Id">Send</a>
                        </li>
                    }
                </ul>
            </div>
        </li>
        }
    </ul>
</div>
<br />
<div class="section-nav">
    <ul class="section-tab-nav tab-nav">
        <li><h4><a asp-action="Index">Back to Start</a></h4></li>
    </ul>
</div>

<div>@ViewBag.Exception</div>
